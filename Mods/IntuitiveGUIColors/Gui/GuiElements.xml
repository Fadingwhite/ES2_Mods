<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Documentation/Schemas/Amplitude.Unity.Gui.GuiElement.xsd">

    <!-- Planet labels -->
    <ExtendedGuiElement Name="PlanetLabelColonizable">
        <Color Red="57"
               Green="255"
               Blue="20"
               Alpha="255" />
    </ExtendedGuiElement>
    
    <ExtendedGuiElement Name="PlanetLabelUncolonizable">
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>
    
    <ExtendedGuiElement Name="PlanetOverPopulation">
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>
    

    <!-- Galaxy view planet circles -->
    <ExtendedGuiElement Name="PlanetColonizable">
        <Icons>
            <Icon Size="Small"
                  Path="Bitmaps/Atlased/Labels/PlanetCircleFull" />
        </Icons>
        <Color Red="57"
               Green="255"
               Blue="20"
               Alpha="255" />
    </ExtendedGuiElement>

    <ExtendedGuiElement Name="PlanetUncolonizable">
        <Icons>
            <Icon Size="Small"
                  Path="Bitmaps/Atlased/Labels/PlanetCircleEmpty" />
        </Icons>
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>

    <ExtendedGuiElement Name="PlanetDestroyed">
        <Icons>
            <Icon Size="Small"
                  Path="Bitmaps/Atlased/Labels/PlanetCircleDestroyed" />
        </Icons>
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>


    <!-- General colors -->
    <ExtendedGuiElement Name="UnaffordableCost">
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>

    <ExtendedGuiElement Name="FailedPrerequisite">
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>
    
    <ExtendedGuiElement Name="Error">
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>


    <!-- Population growth indicators -->
    <ExtendedGuiElement Name="ColorGrowthPositive">
        <Color Red="57"
               Green="255"
               Blue="20"
               Alpha="255" />
    </ExtendedGuiElement>
    
    <ExtendedGuiElement Name="ColorGrowthNegative">
        <Color Red="255"
               Green="40"
               Blue="0"
               Alpha="255" />
    </ExtendedGuiElement>

</Datatable>